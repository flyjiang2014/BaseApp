<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.carking.quotationlibrary.view_flow.ViewFlow
        android:id="@+id/viewflow_flow"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.carking.quotationlibrary.view_flow.CircleFlowIndicator
        android:id="@+id/viewflow_indic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3.5dp"
        app:activeColor="@color/grey_dim"
        app:activeType="fill"
        app:circleSeparation="9sp"
        app:inactiveColor="@color/white"
        app:inactiveType="fill"
        app:radius="3dp" />

</FrameLayout>