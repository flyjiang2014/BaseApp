<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.base.flyjiang.baseapp.ui.test.PopupTestActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pop0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="popup00"
            android:background="@color/blue"
            android:text="pop00"/>
    <TextView
        android:id="@+id/tv_pop1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:onClick="popup01"
        android:background="@color/yellow"
        android:text="pop01"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:onClick="popup02"
        android:text="pop02"/>
    <TextView
        android:id="@+id/tv_pop3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="popup03"
        android:gravity="center"
        android:padding="10dp"
        android:text="pop03"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"></LinearLayout>
    <TextView
        android:id="@+id/tv_pop4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="popup03"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/yellow"
        android:text="pop04"/>

</LinearLayout>
